2 OPERA3D ../VerticalLinearGradientField3D.tab	0.00005	0	0	0.01


[PARTICLES]
tau 0
tmax 9e99
lmax 9e99

endlog 1
endlogvars xstart ystart zstart xend yend zend vxstart vystart vzstart vxend vyend vzend
endlogfilter
tracklog 0
hitlog 0
snapshotlog 0
spinlog 0
snapshots 0
trackloginterval 5e-3
spinloginterval 5e-7

spintimes	0 0
Bmax 0.1
flipspin 0

[neutron]
tau 0

[proton]
tmax 3e-3

[electron]
tmax 1e-5

[mercury]

[xenon]

